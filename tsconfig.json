{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "lib",
		"baseUrl": ".",
		"lib": [
			"ES2020"
		],
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"tests/**/*",
		"tests/**/*.tsx",
		"src/**/*.spec.ts",
	]
}
